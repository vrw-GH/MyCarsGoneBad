{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Welcome!{% endblock %}

{% block body %}

<main class="flex flex-col lg:flex-row">

   {{include('main/_carslistAside.html.twig')}}

   <div class="px-12 pt-10 w-full">
      <h1 class="text-2xl font-semibold mb-2">
         The <span class="text-4xl font-bold mb-8">
            &quot;{{ myCar.name|upper }}&quot;
         </span>
         {# <div class="rounded-2xl py-1 px-3 flex justify-center w-32 items-center bg-amber-400/10">
            <div class="rounded-full h-2 w-2 bg-amber-400 blur-[1px] mr-2"></div>
            <p class="uppercase text-xs text-nowrap">{{myCar.status}}</p>
         </div> #}
      </h1>

      <div class="space-y-5">
         <!-- start car item -->
         <a class="hover:text-slate-200" href="{{ path('app_car_show', {
            id: myCar.id
        }) }}">
            <div
               class="bg-[#16202A] rounded-2xl pl-5 py-5 pr-11 flex flex-col min-[1174px]:flex-row min-[1174px]:justify-between">
               <div class="flex justify-center min-[1174px]:justify-start">
                  <div class="ml-5">
                     {# <h4 class="text-[22px] pt-1 font-semibold">
                        <a class="hover:text-slate-200" href="{{ path('app_car_show', {
                        id: myCar.id
                    }) }}">{{myCar.name|upper}}</a>
                     </h4>
                     #}
                     <img class="h-[4rem] w-[auto]" src="{{ asset(myCar.image) }}" alt="{{myCar.statusString}}">
                  </div>
               </div>
               <div class="flex justify-center min-[1174px]:justify-start mt-2 min-[1174px]:mt-0 shrink-0">
                  <div class="border-0 border-white/20 pr-8">

                  </div>
                  <div class="pl-8 border-r border-white/20 pr-8">
                     <p class="text-slate-400 text-xs">Status</p>
                     <p class="text-xl">{{myCar.statusString}}</p>
                  </div>
                  <div class="pl-8 w-[200px] border-r border-white/20 pr-8">
                     <p class="text-slate-400 text-xs">Driver</p>
                     <p class="text-xl">{{myCar.driver|title}}</p>
                  </div>

                  <div class="pl-8 w-[100px]">
                     <p class="text-slate-400 text-xs">Class</p>
                     <p class="text-xl">{{myCar.class}}</p>
                  </div>
               </div>
            </div>
         </a>
         <!-- end ship item -->

      </div>

   </div>

</main>
<p class="text-lg mt-5 text-center md:text-left">
   Looking for your next ride?
   <a href="#" class="underline font-semibold">Browse all {{ cars|length * 10 }} cars!</a>
</p>

{% endblock %}